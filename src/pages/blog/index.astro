---
import Base from "../../layouts/Base.astro";
import fs from "node:fs";
import path from "node:path";

const dir = path.resolve(Astro.srcDir, "pages/blog");
const posts = fs.readdirSync(dir).filter(f => f.endsWith(".md")).map(f => f.replace(/\.md$/, ""));
---
<Base title="Blog â€” Kullhem.io">
  <h1>Blog</h1>
  <ul>
    {posts.map(name => <li><a href={`/blog/${name}`}>{name.replace(/-/g, " ")}</a></li>)}
  </ul>
</Base>